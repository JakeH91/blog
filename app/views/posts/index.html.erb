  
  <h1>Posts</h1>
  <% if Post.exists? %>

    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sort By<b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li><%= link_to "Newest(Submitted)", posts_path(order: "newSub") %></li>
        <li><%= link_to "Oldest(Submitted)", posts_path %></li>
        <li><%= link_to "Newest(Event)", posts_path(order: "newEv") %></li>
        <li><%= link_to "Oldest(Event)", posts_path(order: "oldEv") %></li>
      </ul>
    </li>
    
    <% @posts.each do |post| %>
      <div class="post">
        <p class="post_author"><%= post.user.first_name[0, 1] %></p>
        <h3 class="post_title"><%= link_to post.title, post %></h3>
        
        <p class="post_content"><%= post.content %></p>
        <p class="hidden"><%= post.date_of_event %></p>
        <p class="hidden"><%= post.location %></p>
        <div class="post_likes">
          <p>Likes: <%= post.likes %></p>
          <p>Dislikes: <%= post.dislikes %></p>
        </div>

      </div>
      <div class="post_comments">
        <h5><strong>Comments</strong></h5>
        <% if post.comments.exists? %>
          <div class="post_comment no-border">
            <p class="post_comment_author"><%= post.comments.last.user.first_name[0, 1] %></p>
            <p class="post_comment_content"><%= post.comments.last.content %></p>
            <p class="post_comment_see_more"><%= link_to 'See More', post %></p>
          </div>

        <% else %>
          <p>Currently No Comments</p>
        <% end %>
      </div>

    <% end %>
    <%= will_paginate @posts %>
  <% else %>
    <p>Currently No Posts</p>
  <% end %>

<br>